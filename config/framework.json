{
  "name": "OmegaFramework",
  "version": "1.1.0",
  "description": "SSJS Framework modular para Salesforce Marketing Cloud con configuraci√≥n centralizada y singleton pattern",
  "author": "Claude (Anthropic)",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/YOUR_USERNAME/omegaframework.git"
  },
  "framework": {
    "prefix": "OMG_FW_",
    "category": "OmegaFramework",
    "contentBlocks": [
      {
        "name": "ResponseWrapper",
        "key": "omegaframework_response_wrapper",
        "description": "Standard response wrapper for all handlers",
        "file": "src/ResponseWrapper.ssjs",
        "dependencies": [],
        "assetType": {
          "name": "codesnippetblock",
          "id": 220
        },
        "order": 1
      },
      {
        "name": "Settings",
        "key": "omegaframework_settings",
        "description": "Centralized configuration management for the framework",
        "file": "src/Settings.ssjs",
        "dependencies": [],
        "assetType": {
          "name": "codesnippetblock",
          "id": 220
        },
        "order": 2
      },
      {
        "name": "Core",
        "key": "omegaframework_core",
        "description": "Main framework wrapper - loads base modules and provides handler loading functions",
        "file": "src/Core.ssjs",
        "dependencies": ["ResponseWrapper", "Settings", "AuthHandler", "ConnectionHandler"],
        "assetType": {
          "name": "codesnippetblock",
          "id": 220
        },
        "order": 10
      },
      {
        "name": "AuthHandler",
        "key": "omegaframework_auth_handler",
        "description": "Authentication handler for SFMC REST API tokens",
        "file": "src/AuthHandler.ssjs",
        "dependencies": ["ResponseWrapper"],
        "assetType": {
          "name": "codesnippetblock",
          "id": 220
        },
        "order": 2
      },
      {
        "name": "ConnectionHandler",
        "key": "omegaframework_connection_handler",
        "description": "HTTP connection handler with retry logic",
        "file": "src/ConnectionHandler.ssjs",
        "dependencies": ["ResponseWrapper"],
        "assetType": {
          "name": "codesnippetblock",
          "id": 220
        },
        "order": 3
      },
      {
        "name": "EmailHandler",
        "key": "omegaframework_email_handler",
        "description": "Email management handler (CRUD operations)",
        "file": "src/EmailHandler.ssjs",
        "dependencies": ["ResponseWrapper", "AuthHandler", "ConnectionHandler"],
        "assetType": {
          "name": "codesnippetblock",
          "id": 220
        },
        "order": 4
      },
      {
        "name": "DataExtensionHandler",
        "key": "omegaframework_dataextension_handler",
        "description": "Data Extension management handler (CRUD operations)",
        "file": "src/DataExtensionHandler.ssjs",
        "dependencies": ["ResponseWrapper", "AuthHandler", "ConnectionHandler"],
        "assetType": {
          "name": "codesnippetblock",
          "id": 220
        },
        "order": 5
      },
      {
        "name": "AssetHandler",
        "key": "omegaframework_asset_handler",
        "description": "Asset management handler for Content Builder",
        "file": "src/AssetHandler.ssjs",
        "dependencies": ["ResponseWrapper", "AuthHandler", "ConnectionHandler"],
        "assetType": {
          "name": "codesnippetblock",
          "id": 220
        },
        "order": 6
      },
      {
        "name": "FolderHandler",
        "key": "omegaframework_folder_handler",
        "description": "Folder management handler for organization",
        "file": "src/FolderHandler.ssjs",
        "dependencies": ["ResponseWrapper", "AuthHandler", "ConnectionHandler"],
        "assetType": {
          "name": "codesnippetblock",
          "id": 220
        },
        "order": 7
      },
      {
        "name": "LogHandler",
        "key": "omegaframework_log_handler",
        "description": "Logging handler with multi-destination support",
        "file": "src/LogHandler.ssjs",
        "dependencies": ["ResponseWrapper", "AuthHandler", "ConnectionHandler"],
        "assetType": {
          "name": "codesnippetblock",
          "id": 220
        },
        "order": 8
      }
    ]
  },
  "installation": {
    "requirements": {
      "sfmc": {
        "contentBuilder": true,
        "restApi": true,
        "installedPackage": true
      },
      "permissions": [
        "Asset:Read",
        "Asset:Write",
        "Asset:Publish",
        "DataExtension:Read",
        "DataExtension:Write",
        "Email:Read",
        "Email:Write",
        "Folder:Read",
        "Folder:Write"
      ]
    },
    "installer": {
      "file": "setup/Installer.ssjs",
      "cloudPage": true,
      "autoDetection": true,
      "backup": true
    },
    "setup": {
      "file": "setup/Setup.html",
      "dataExtensions": [
        {
          "name": "OmegaFramework_Logs",
          "key": "omegaframework_logs",
          "description": "Log storage for framework operations",
          "optional": true
        },
        {
          "name": "OmegaFramework_Config",
          "key": "omegaframework_config",
          "description": "Configuration storage for framework",
          "optional": true
        }
      ],
      "folders": [
        {
          "name": "OmegaFramework",
          "description": "Root folder for framework assets",
          "optional": false
        }
      ]
    }
  },
  "testing": {
    "file": "setup/TestExample.ssjs",
    "coverage": [
      "Authentication",
      "HTTP Connections",
      "Email Operations",
      "Data Extension Operations",
      "Asset Operations",
      "Folder Operations", 
      "Logging Operations",
      "Response Wrapper"
    ]
  },
  "documentation": {
    "readme": "docs/README.md",
    "visual": "docs/Documentation.html",
    "context": "docs/CLAUDE.md",
    "examples": "setup/TestExample.ssjs"
  },
  "git": {
    "structure": {
      "src/": "Source code for all handlers",
      "setup/": "Installation and configuration files",
      "docs/": "Documentation files",
      "config/": "Configuration files"
    },
    "deployment": {
      "automatic": true,
      "installer": "setup/Installer.ssjs",
      "sourceUrls": {
        "base": "https://raw.githubusercontent.com/YOUR_USERNAME/omegaframework/main/",
        "fallback": "embedded"
      }
    }
  },
  "compatibility": {
    "sfmc": {
      "enterprise": true,
      "core": true,
      "plus": true
    },
    "ssjs": {
      "version": "1.1.1",
      "functions": "official-only",
      "timeout": "30s"
    },
    "apis": {
      "rest": "v1",
      "soap": "legacy-fallback"
    }
  },
  "changelog": {
    "1.1.0": {
      "date": "2025-01-31",
      "changes": [
        "Added OMG_FW_Core wrapper for centralized module loading",
        "Added OMG_FW_Settings for centralized configuration",
        "Implemented singleton pattern for AuthHandler and ConnectionHandler",
        "Token caching in AuthHandler for improved performance",
        "Updated all handlers to accept shared instances (reduces duplication)",
        "New OmegaFramework global object with configure(), load(), createHandler() methods",
        "Conditional handler loading - load only what you need",
        "Updated examples with new pattern (v1.1.0)",
        "Fixed instantiation pattern - config in constructor, not methods",
        "Breaking changes: See MIGRACION_v1.1.md for upgrade guide"
      ]
    },
    "1.0.0": {
      "date": "2025-01-13",
      "changes": [
        "Initial release",
        "8 independent Content Blocks",
        "Standard response wrapper",
        "Authentication with token refresh",
        "HTTP retry logic",
        "Multi-destination logging",
        "Comprehensive documentation",
        "Automated installer"
      ]
    }
  }
}